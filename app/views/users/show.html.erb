<div class="container">

  <!-- User info section -->
  <div class="user-info">
    <id class="avatar-user">
      <%= simple_form_for(@user) do |f| %>
        <%= cl_image_tag @user.photo, class: "avatar-max "%>
        <%= f.input_field :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, :value => "Update your picture" , :class => "btn btn-light photo-submit"%>
      <% end %>
    </id>

    <div id="profile-info">
      <h1><%= @user.first_name %> <%= @user.last_name %></h1>
      <p> Address: <%= @user.address %> </p>
      <p> E-mail: <%= @user.email %></p>
    </div>
  </div>

  <!-- User boardgames section -->
  <div class="user-boardgames">
    <h2>My Bookings</h2>
    <% @user.boardgames.each do |boardgame| %>
      <ul>
        <li> <%= link_to boardgame.name, boardgame_path(boardgame) %></li>
      </ul>
    <% end %>
  </div>

  <!-- User reviews section -->
  <div class="user-reviews">
    <h2>My Reviews</h2>
    <% @user.reviews.each do |review| %>
      <ul>
        <li><%= review.content %> : <%= review.rating %></li>
      </ul>
    <% end %>
  </div>

  <div class="card">
    <div class="card">
      <% if policy(@user).update? %>
        <%= link_to 'Update profile', edit_user_path(@user) %>
      <% end %>
    </div>
    <div class="card">
      <% if policy(@user).destroy? %>
        <%= link_to 'Delete profile', user_registration_path, data: { confirm: 'Are you sure?' }, method: :delete %>
      <% end %>
    </div>
  </div>
</div>

