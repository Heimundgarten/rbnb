
<div class="container fullpage-container">
  <%= simple_form_for(@boardgame) do |f| %>
    <%= f.input :name, placeholder: 'Title of your boardgame:' %>
    <%= f.input :description, placeholder: 'Add a description:'%>
    <%= f.input :year, collection: (1970..2019), prompt: "Year of game edition(Optional)"%>
    <%= f.label :price_per_day %>
    <%= f.number_field :price_per_day, :class => 'text_field', :step => 0.5, placeholder: "â‚¬ 2.00" %>
    <%= f.input :photo %>
    <%= f.input :photo_cache , as: :hidden %>
    <%= f.button :submit, :value => "Submit" , :class => "btn btn-primary rounded"%>
  <% end %>
</div>

