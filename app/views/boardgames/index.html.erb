
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.1) 0%, rgba(0,36,61,0.5) 50%), url('<%= image_path 'boardgames.jpg' %>');">
  <div class="banner-content">
    <h1>GameNight</h1>
    <p>   Awesome boardgames for an evening with </p>
  </div>
</div>


<div class="main-container">
  <div class="cards">
    <% @boardgames.each do |boardgame| %>
    <div class="card-product">
      <%= cl_image_tag boardgame.photo %>
      <div class="card-product-infos">
        <h2><%= boardgame.name %></h2>
        <p><%= boardgame.description %></p>
      </div>
    </div>
    <% end %>
  </div>


  <div class="container-map">
    <div id="map"
      style="width: 100%;
      height: 500px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div>

